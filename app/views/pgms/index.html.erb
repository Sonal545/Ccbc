<h1> <%=Time.now.year %> Events </h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Title</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pgms.each do |pgm| %>
     <% if pgm.date >= Date.today %>
      <tr>
        <td><%= pgm.date %></td>
        <td><%= pgm.title %></td>
        <td><%= pgm.details %></td>
        <td><%= link_to 'Show', pgm %></td>
      </tr>
     <% end %> 
    <% end %>
  </tbody>
</table>


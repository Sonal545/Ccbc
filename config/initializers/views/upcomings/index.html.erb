<h1><%= Time.now.year %> Upcoming Events</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
     
   <% @upcomings.each do |upcoming| %> 
    <% if upcoming.date >= Date.today %>
      <tr>
        <td><%= upcoming.date %></td>
        <td><%= upcoming.name %></td>
        <td><%= upcoming.details %></td>
        <td><%= link_to 'Show', upcoming %></td>  
      </tr>
    <% else %>
      <% break %>
    <% end %>
   <% end %>
    
  </tbody>
</table>





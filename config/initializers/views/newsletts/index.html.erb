<h1>Listing newsletts</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @newsletts.each do |newslett| %>
      <tr>
        <td><%= newslett.date %></td>
        <td><%= newslett.name %></td>
        <td><%= link_to 'Show', newslett %></td>
        <td><%= link_to 'Edit', edit_newslett_path(newslett) %></td>
        <td><%= link_to 'Destroy', newslett, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

